<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InicioActivity">

        <!-- COMMS -->
        <ImageView
            android:id="@+id/imgFondoTartaro"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/tartarus" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#9F000000"
            android:gravity="center"
            android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgLogo"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/hades_logo" />



                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnLoginTrad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/btn_redondo_login"
                    android:text="Iniciar Sesión"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnLoginGoogle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/btn_redondo_google"
                    android:text="Iniciar Sesión con Google"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnLoginFacebook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/btn_redondo_facebook"
                    android:text="Iniciar Sesión con Facebook"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    />


        </LinearLayout>

</RelativeLayout>