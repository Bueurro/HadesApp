<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/imgTopInicio"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/tartarus"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#95000000"
        android:gravity="top">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_IB_min"
            android:src="@drawable/img_hadeswiki_logo"
            android:layout_marginTop="@dimen/common_margin_min"
            android:layout_marginBottom="@dimen/common_margin_default"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">


            <ImageButton
                android:id="@+id/btnTemp"
                android:layout_width="@dimen/common_IB_default"
                android:layout_height="@dimen/common_IB_default"
                android:src="@drawable/img_personajes_bbtn"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>