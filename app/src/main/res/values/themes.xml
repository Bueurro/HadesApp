<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HadesApp" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:fontFamily">@font/rosario</item>
        <item name="colorPrimary">@color/rojo_hades</item>
        <item name="colorPrimaryVariant">@color/oro</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>


    </style>

    <style name="Theme.BottomNavigation" parent="Theme.HadesApp"/>

    <style name="Theme.API_Splash_Screen" parent="Theme.HadesApp"/>

    <style name="Theme.APISplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/rojo_hades</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/img_logo</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.HadesApp</item>
    </style>

</resources>